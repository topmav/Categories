<% content_for :title do %>
  Categories
<% end %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
  <h1 class="text-2xl font-bold mb-4">Categories</h1>

  <table class="min-w-full divide-y divide-gray-200 shadow-sm border border-gray-200 mb-4">
    <thead class="bg-gray-50">
      <tr>
        <th scope="col" class="px-4 py-2 text-left text-sm font-medium text-gray-700">ID</th>
        <th scope="col" class="px-4 py-2 text-left text-sm font-medium text-gray-700">Name</th>
        <th scope="col" class="px-4 py-2 text-left text-sm font-medium text-gray-700">Created At</th>
        <th scope="col" class="px-4 py-2 text-left text-sm font-medium text-gray-700">Updated At</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @categories.each do |category| %>
        <tr>
          <td class="px-4 py-2 text-sm text-gray-700">
            <%= category.id %>
          </td>
          <td class="px-4 py-2 text-sm text-blue-600 underline">
            <%= link_to category.name, category_path(category) %>
          </td>
          <td class="px-4 py-2 text-sm text-gray-700">
            <%= category.created_at.strftime("%Y-%m-%d %H:%M") %>
          </td>
          <td class="px-4 py-2 text-sm text-gray-700">
            <%= category.updated_at.strftime("%Y-%m-%d %H:%M") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Category', new_category_path, class: "inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
</div>